<%= simple_form_for(product) do |form| %>
  <%= form.input :name, required: true %>
  <%= form.input :description, as: :text, input_html: { rows: 4 }, required: true %>
  
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', products_path, class: "btn btn-secondary" %>
  </div>
<% end %>
