<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Accounts</h1>
  <%= link_to "Add New Account", new_account_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @accounts.each do |account| %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= account.name %></h5>
          <div class="mt-3">
            <%= link_to "View", account, class: "btn btn-outline-primary btn-sm" %>
            <%= link_to "Edit", edit_account_path(account), class: "btn btn-outline-secondary btn-sm" %>
            <%= button_to "Delete", account, 
                          method: :delete, 
                          data: { confirm: "Are you sure?" }, 
                          class: "btn btn-outline-danger btn-sm",
                          form_class: "d-inline" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
