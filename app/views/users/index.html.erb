<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1>Users for <%= @account.name %></h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to "Accounts", accounts_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to @account.name, @account %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Users</li>
      </ol>
    </nav>
  </div>
  <%= link_to "Add New User", new_account_user_path(@account), class: "btn btn-primary" %>
</div>

<% if @users.any? %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>License Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <span class="badge bg-info"><%= user.license_count %></span>
            </td>
            <td>
              <%= link_to "View", [@account, user], class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "Edit", edit_account_user_path(@account, user), class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to "Delete", [@account, user], turbo_method: :delete,
                          data: { turbo_confirm: "Are you sure?" },
                          class: "btn btn-outline-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-5">
    <p class="text-muted">No users for this account yet.</p>
    <%= link_to "Add First User", new_account_user_path(@account), class: "btn btn-primary" %>
  </div>
<% end %>
