<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Products</h1>
  <%= link_to "Add New Product", new_product_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= truncate(product.description, length: 100) %></p>
          <div class="d-flex mt-3">
            <%= link_to "View", product, class: "btn btn-outline-primary btn-sm mx-1" %>
            <%= link_to "Edit", edit_product_path(product), class: "btn btn-outline-secondary btn-sm mx-1" %>
            <%= button_to "Delete", product, method: :delete, 
                        data: { turbo_confirm: "Are you sure?" }, 
                        class: "btn btn-outline-danger btn-sm mx-1" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
